<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Book Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1>Assignment Tracker</h1>
            <br>
            <a href="/bookslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Assignment
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Assignments</th>
                    <th class="text-center col-2">Marks</th>
                    <th class="text-center col-1">Weight</th>
                    <th class="col-4">Assignment Description</th>
                    <th class="text-center col-1">Due Date</th>
                    <th class="text-center col-1">Edit</th>
                    <th class="text-center col-1">Delete</th>
                </tr>
                <% for(let count=0;count<BookList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= BookList[count].Name %></td>
                    <td class="text-center col-2"><%= BookList[count].Author %></td>
                    <td class="text-center col-1"><%=BookList[count].Published%></td>
                    <td class="col-4"><%= BookList[count].Description %> </td>
                    <td class="text-center col-1"><%= BookList[count].Price %></td>
                    <td class="text-center col-1">
                        <a href="/bookslist/edit/<%= BookList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/bookslist/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm" onclick="return confirmDelete()">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </a>
                    
                    </td>
                </tr>    
                    <%} %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>
<script>
function confirmDelete() {
    return confirm('Are you sure you want to delete this Assignment');
}
</script>