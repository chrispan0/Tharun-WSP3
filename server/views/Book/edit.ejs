<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1>Edit Tracker</h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignments:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Assignment name." name="Name" value="<%= Book.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Marks:</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the how many marks the assignment is out of." name="Author" value="<%= Book.Author %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Weight:</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the weight of the Assignment. Use ' % '." name="Published" value="<%= Book.Published %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Assignment Descriptions:</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="Enter the type of Assignment and for which class." name="Description" required><%= Book.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Due Dates:</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the due date 'yyyy/mm/dd'. " name="Price" value="<%= Book.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>